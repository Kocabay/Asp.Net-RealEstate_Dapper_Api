@model List<RealEstate_Dapper_UI.Dtos.ProductDtos.ResultProductDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<section class="locations-1 popular" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Tüm Satılık  & Kiralık İlanlar (@Model.Count) </h3>
            </div>
            <div class="row pt-5">
                @foreach (var item in Model)
                {
                <div class="col-lg-3 col-md-4 col-6">
                    <a href="#url">
                        <div class="box16">
                             <div class="rentext-listing-category"><span>@item.Type</span><span>@item.ProductCategory</span>

                             </div>
                             <img class="img-fluid" style="height:200px;width:700px" src="@item.CoverImage" alt=""/>
                             <div class="box-content">
                                 <h3 class="title">@item.Price</h3>
                                 <span class="post"> @item.Adres @item.District- @item.City</span>
                             </div>
                        </div>
                    </a>
                </div>
                    
                }
 
            </div>
        </div>
    </div>
</section>
